{
  "compilerOptions": {
    "target": "ES6",
    "lib": ["es2015", "es2016", "es2017", "dom", "es2018.promise"],
    "jsx": "react-jsx",
    "module": "esnext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true ,
    "paths": {
      "phantom-request": ["./dist/index.d.ts"] // Path to your type definitions
    }
  },
  "exclude": ["node_modules", "dist"]
}
